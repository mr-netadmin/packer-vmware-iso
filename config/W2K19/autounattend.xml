            </DiskConfiguration>  
            <ImageInstall>
                <OSImage>
                    <InstallFrom>
                        <MetaData wcm:action="add">
                            <Value>Windows Server 2019 SERVERDATACENTER</Value>
                            <Key>/IMAGE/NAME</Key>
                        </MetaData>
                    </InstallFrom>
                    <InstallTo>
                        <DiskID>0</DiskID>
